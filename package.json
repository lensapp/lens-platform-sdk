{
  "name": "lens-platform-sdk",
  "version": "0.0.4",
  "description": "Lens Platform Client SDK",
  "engines": {
    "node": ">=12 <13"
  },
  "files": [
    "dist/**/package.json",
    "dist/**/*.js",
    "dist/types/**/*.d.ts"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    "require": "./dist/cjs/index.js",
    "import": "./dist/esm/index.js"
  },
  "scripts": {
    "test": "xo",
    "build:dist": "rm -rf dist && npm run build:cjs && npm run build:esm",
    "build:cjs": "npx tsc -p tsconfig.cjs.json",
    "build:esm": "npx tsc -p tsconfig.esm.json && echo '{\"type\": \"module\"}'> dist/esm/package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lensapp/lens-platform-sdk.git"
  },
  "author": "Mirantis Inc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lensapp/lens-platform-sdk/issues"
  },
  "homepage": "https://github.com/lensapp/lens-platform-sdk#readme",
  "xo": {
    "prettier": true,
    "space": 2,
    "rules": {
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "camelCase": true,
            "pascalCase": true
          }
        }
      ],
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/prefer-ts-expect-error": "off",
      "@typescript-eslint/object-curly-spacing": [
        "error",
        "always"
      ]
    }
  },
  "devDependencies": {
    "typescript": "^4.2.4",
    "xo": "^0.38.2"
  },
  "dependencies": {
    "got": "^11.8.2",
    "jwt-decode": "^3.1.2"
  }
}
