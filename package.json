{
  "name": "lens-platform-sdk",
  "version": "10.18.0",
  "description": "Lens Platform Client SDK",
  "engines": {
    "node": ">=12 <=16"
  },
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "main": "./dist/cjs/index.js",
  "scripts": {
    "test": "npm run lint && npm run check:type && npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:unit:watch": "jest --watchAll",
    "test:e2e": "jest --runInBand --config ./jest.integration-test.config.js",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "check:type": "tsc -p tsconfig.json --noEmit",
    "build": "npm run build:dist",
    "build:dist": "rm -rf dist && run-p build:cjs build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json && echo '{\"type\": \"module\"}'> dist/esm/package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lensapp/lens-platform-sdk.git"
  },
  "author": "Mirantis Inc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lensapp/lens-platform-sdk/issues"
  },
  "homepage": "https://github.com/lensapp/lens-platform-sdk#readme",
  "eslintConfig": {
    "plugins": [
      "eslint-plugin-tsdoc"
    ],
    "extends": [
      "xo",
      "xo-typescript/space"
    ],
    "ignorePatterns": [
      "dist"
    ],
    "rules": {
      "@typescript-eslint/quotes": [
        "error",
        "double"
      ],
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/prefer-ts-expect-error": "off",
      "@typescript-eslint/object-curly-spacing": [
        "error",
        "always"
      ],
      "tsdoc/syntax": "error",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/ban-types": "off",
      "no-warning-comments": "off"
    }
  },
  "devDependencies": {
    "@swc/core": "^1.2.115",
    "@swc/jest": "^0.2.11",
    "@types/jest": "^27.0.3",
    "@types/nock": "^11.1.0",
    "@types/simple-oauth2": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.3.0",
    "eslint-config-xo": "^0.41.0",
    "eslint-config-xo-typescript": "^0.49.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^27.4.2",
    "nock": "^13.2.1",
    "npm-run-all": "^4.1.5",
    "regenerator-runtime": "^0.13.9",
    "simple-oauth2": "^4.2.0",
    "type-fest": "^2.7.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "jwt-decode": "^3.1.2",
    "pino": "^7.5.0"
  }
}
